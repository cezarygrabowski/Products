<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/options_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OptionsListActivity"
        android:background="@color/colorPrimary">

    <Button
            android:text="Wróć"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/go_back_from_options_list" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="24dp" app:layout_constraintHorizontal_bias="0.91"/>
    <Switch
            android:text="Ciemne tło"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dark_background_switch" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="25dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/font_size_text_view"/>

    <Spinner
            android:id="@+id/font_size_dropdown"
            android:layout_width="111dp"
            android:layout_height="wrap_content"
            android:background="@android:drawable/btn_dropdown"
            android:spinnerMode="dropdown"
            app:layout_constraintStart_toStartOf="@+id/font_size_text_view" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/dark_background_switch" android:layout_marginStart="252dp"/>
    <TextView
            android:text="Rozmiar czcionki"
            android:textSize="30sp"
            android:layout_width="wrap_content"
            android:layout_height="57dp"
            android:id="@+id/font_size_text_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/dark_background_switch" android:layout_marginBottom="610dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>